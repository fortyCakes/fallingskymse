mse version: 0.3.8
full name: Falling Sky
short name: FallingSky
installer group: fallingsky/game files
icon: card-back.png
position hint: 1

version: 2022-03-16

init script:	
	def_card := {
		if contains(card.card_type, match: "alchemy") then "alchemy" else
		card.card_type
	}


set field:
	type: info
	name: Set Information
set field:
	type: text
	name: title
	description: This information will not appear on the card.
set field:
	type: text
	name: description
	multi line: true
	description: This information will not appear on the card.
set field:
	type: text
	name: series
	description: This set's Series number

default set style:
	title:
		padding left: 2
		font:
			size: 16

card field:
	type: choice
	name: card type
	choice: alchemy
	default: def_card(value)
	card list visible: true
	card list column: 2

card field:
	type: text
	name: name
	identifying: true
	script: to_upper(value)
	show statistics: false
	card list visible: true
	card list column: 1

card field:
	type: text
	name: rule text
	show statistics: false
	multi line: true
	
card field:
	type: choice
	name: red transparency
	choice:
		name: on
		name: off
	default: "on"
